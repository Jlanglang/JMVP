<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="普通的activity"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="模板的activity"
        app:layout_constraintTop_toBottomOf="@+id/bt_demo" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="loading的activity"
        app:layout_constraintTop_toBottomOf="@+id/bt_template" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_fg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="demo的fragment"
        app:layout_constraintTop_toBottomOf="@+id/bt_loading" />
</android.support.constraint.ConstraintLayout>